<% @page_title = "Admin Users List" %>

<%= link_to "<< Back to Main Menu", menu_authentications_path, :class => 'back-link' %>

<div class="user list">
  <h2>Admin Users</h2>

  <div class="newAdminUser"><%= link_to "<< Add New Admin User >>", new_admin_user_path, :class => 'action-new' %></div>

  <div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin Users list">
    <tr class="header">

      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |admin_user| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%= admin_user.username %></td>
          <td><%= admin_user.name %></td>
          <td><%= mail_to(admin_user.email) %></td>
          <td class="actions">
            <%= link_to "Edit", edit_admin_user_path(admin_user.id), :class => 'action edit' %>
            <%= link_to "Delete", delete_admin_user_path(:id => admin_user.id), :class => 'action delete' %>
          </td>
        </tr>
    <% end %>
  </table>
</div>