<% @page_title = "Delete Page: #{@page.name}" %>

<%= link_to "<< Back to Pages List", pages_path(:subject_id => @subject.id), :class => 'back-link' %>

<div class="page delete">
  <h2>Delete Page</h2>

  <%= form_for(:page, :url => page_path(@page.id, :subject_id => @subject.id), :html => {:method => :delete}) do |f| %>

      <p>Are you sure you want to permanently delete this page?</p>

      <p class="reference-name"><%= @page.name %></p>

      <div class="form-buttons">
        <%= submit_tag("Delete Page") %>
      </div>

  <% end %>
</div>