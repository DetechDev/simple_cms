<% @page_title = "Edit Page: #{@page.name}" %>

<%= link_to "<< Back to Pages List", pages_path(:subject_id => @subject.id), :class => 'back-link' %>

<div class="page edit">
  <h2>Update Page</h2>

  <%= form_for(@page) do |f| %>

      <%= render(:partial => 'form', :locals => {:f => f}) %>

      <div class="form-buttons">
        <%= submit_tag("Update Page") %>
      </div>

  <% end %>
</div>