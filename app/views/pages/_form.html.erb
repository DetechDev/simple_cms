<%= error_messages_for(@page) %>
<!--error_messages_for() is a custom helper method in helpers/application_helper.rb -->



<table summary="Page form fields">
  <tr>
    <th><%= f.label(:subject_id,"Subject") %></th>
    <td><%= f.select(:subject_id, @subjects.collect {|s| [s.name, s.id]}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:name) %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:permalink) %></th>
    <td><%= f.text_field(:permalink) %></td>
  </tr>
  <tr>
    <th><%= f.label(:position) %></th>
    <td><%= f.select(:position, 1..@page_count) %></td>
  </tr>
  <tr>
    <th><%= f.label(:visible) %></th>
    <td><%= f.check_box(:visible, :checked => true) %></td>
  </tr>
</table>
