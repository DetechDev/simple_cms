<% @page_title = "Delete Subject" %>

<%= link_to "<< Back to Subjects List", subjects_path, :class => 'back-link' %>


<div class="subject delete">
  <h2>Delete Subject</h2>


  <%= form_for(:subject, :url => subject_path(@subject.id), :html => {:method => :delete}) do |f| %>

      <p>Are you sure you want to permanently delete this subject?</p>

      <p class="reference-name"><%= @subject.name %></p>

      <div class="form-buttons">
        <%= submit_tag("Delete Subject") %>
      </div>

  <% end %>
</div>